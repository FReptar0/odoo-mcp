# Odoo Database Configuration
# Copy this file to .env and fill in your actual values

# Odoo server URL (including protocol)
ODOO_HOST=https://your-odoo-instance.com

# Database name
ODOO_DB=your_database_name

# Username (email or login name)
ODOO_USER=your_username

# Password (use this for now, API key support can be added later)
ODOO_PASS=your_password

# Legacy support (will be mapped to new variables)
ODOO_URL=https://your-odoo-instance.com
ODOO_DATABASE=your_database_name
ODOO_USERNAME=your_username
ODOO_API_KEY=your_password