{
  "name": "odoo-mcp",
  "version": "1.0.0",
  "description": "MCP server for extracting sales information from Odoo v18 via XML-RPC",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "inspector": "npx --yes @modelcontextprotocol/inspector -- node dist/server.js"
  },
  "keywords": [
    "mcp",
    "odoo",
    "sales",
    "xml-rpc"
  ],
  "author": "FReptar0",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "dotenv": "^16.3.1",
    "xmlrpc": "^1.3.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/xmlrpc": "^1.3.8",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
